{
  "name": "rwsite/wp-thumbnail-plugin",
  "description": "Creates post thumbnails on fly and cache it.",
  "minimum-stability": "stable",
  "license": "proprietary",
  "type": "wordpress-plugin",
  "authors": [
    {
      "name": "Aleksei Tikhomirov",
      "email": "alex@rwsite.ru"
    }
  ],
  "require": {
    "php": "^7.4 || ^8.0",
    "composer/installers": "^2.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "pestphp/pest": "^2.0",
    "mockery/mockery": "^1.4",
    "fakerphp/faker": "^1.23",
    "phpstan/phpstan": "^1.10",
    "laravel/pint": "^1.13",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "autoload": {
    "psr-4": {
      "KamaThumb\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "KamaThumb\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "pest",
    "test:coverage": "pest --coverage",
    "test:unit": "pest tests/Unit",
    "test:integration": "pest tests/Integration",
    "phpstan": "phpstan analyse",
    "phpstan:baseline": "phpstan analyse --generate-baseline",
    "lint": "pint",
    "lint:check": "pint --test",
    "lint:fix": "pint",
    "quality": [
      "@phpstan",
      "@lint:check"
    ]
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "composer/installers": true
    }
  }
}
